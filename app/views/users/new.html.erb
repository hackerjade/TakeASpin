<%= render "shared/header" %>

<div class="welcome-page">
  <center class="welcome">
  <h2 class="sign-in">Rent great bikes from people nearby</h2>
  <div class="sign-in-form col-md-4 col-md-offset-4">

    <form action="<%= users_url %>" method="post">
      <%= auth_token_input %>
        <div class="row form-inline">
          <input class="sign-input name form-control" type="text" name="user[fname]" value="" placeholder="First name">
          <input class="sign-input name form-control" type="text" name="user[lname]" value="" placeholder="Last name">
        </div>

      <input class="sign-input form-control" type="email" name="user[email]" value="" placeholder="Enter your email">

      <input class="sign-input form-control" type="password" name="user[password]" value="" placeholder="Password">

      <br>

      <input type="submit" value="Sign Up" class="btn sign-in-button">
    </form>
    <%= link_to "Log in", new_session_url, { class: 'switch' } %>
  </div>
  </center>

  <center class="bottom-intro">
    <h1 class="intro-1">Renting has never been easier</h1>
    <h1 class="intro-2">Convenient hourly and daily rentals. Insurance included.</h1>
  </center>
</div>
