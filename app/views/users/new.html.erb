<%= render "shared/header" %>

<div class="sign-in-form col-md-4 col-md-offset-4">
  <h2>Sign Up</h2>

  <form action="<%= users_url %>" method="post">
    <%= auth_token_input %>
    <label>
      Username
      <input type="text" name="user[email]" value="">
    </label>

    <label>
      Password
      <input type="password" name="user[password]" value="">
    </label><br>

    <input type="submit" value="Sign Up" class="btn sign-in-button">
  </form>
  <%= link_to "Log in", new_session_url %>
</div>
