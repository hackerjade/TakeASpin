<%= render "shared/header" %>

<div class="sign-in-form col-md-4 col-md-offset-4">
<center>
  <h2 class="sign-in">Sign Up</h2>

  <form action="<%= users_url %>" method="post">
    <%= auth_token_input %>
      <div class="row form-inline">
        <input class="sign-input name form-control" type="text" name="user[fname]" value="" placeholder="First name">
        <input class="sign-input name form-control" type="text" name="user[lname]" value="" placeholder="Last name">
      </div>

    <input class="sign-input form-control" type="text" name="user[email]" value="" placeholder="Enter your email">

    <input class="sign-input form-control" type="password" name="user[password]" value="" placeholder="Password">

    <br>

    <input type="submit" value="Sign Up" class="btn sign-in-button">
  </form>
  <%= link_to "Log in", new_session_url %>
</center>
</div>
