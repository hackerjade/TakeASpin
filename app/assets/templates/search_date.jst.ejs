<div class="pickup-wrapper">
  <label class="search-dates"><%= label %></label>

  <div class="row form-inline">
    <div class="form-group dates">
      <input class="search-input time form-control" id="pickup-date" type="text" name="" value="" placeholder="Date">
      <input class="search-input time form-control" id="pickup-time" type="text" name="" value="" placeholder="Time">
    </div>
  </div>
</div>


<div class="return-wrapper">
  <label class="search-dates">Return</label>

  <div class="row form-inline">
    <div class="form-group dates">
      <input class="search-input time form-control" id="return-date" type="text" name="" value="" placeholder="Date">
      <input class="search-input time form-control" id="return-time" type="text" name="" value="" placeholder="Time">
    </div>
  </div>
</div>


<script type="text/javascript">
    $(function () {
        $('#pickup-date').datetimepicker({
          format: 'MM-DD-YYYY',
          minDate: moment(),
          showClose: true,
          showClear: true,
          showTodayButton: true
        });
        $('#return-date').datetimepicker({
          format: 'YYYY-MM-DD',
          minDate: moment(),
          showClose: true,
          showClear: true,
          showTodayButton: true
        });

        $('#pickup-time').datetimepicker({
          format: 'h:mm',
          minDate: moment(),
          toolbarPlacement: 'bottom',
          showClose: true,
          showClear: true,
          showTodayButton: true
        });
        $('#return-time').datetimepicker({
          format: 'H:mm',
          minDate: moment(),
          toolbarPlacement: 'bottom',
          showClose: true,
          showClear: true,
          showTodayButton: true,
        });


        $("#pickup-date").on("dp.change", function (e) {
            $('#return-date').data("DateTimePicker").minDate(e.date);
        });
        $("#return-date").on("dp.change", function (e) {
            $('#pickup-date').data("DateTimePicker").maxDate(e.date);
        });

    });
</script>
